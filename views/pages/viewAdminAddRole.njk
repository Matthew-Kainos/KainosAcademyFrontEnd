{% extends './base.njk' %}
{% block pageTitle %}
{% endblock %}
{% block header %}{% include "../components/header.njk" %}{% endblock %}
{% block main %}
{% include "../components/navBar.njk" %}
{% include "../components/popup.njk" %}

<script>
  $(document).ready(function(){
    $('select').formSelect();
  });
</script>

<body>
<div class="formRow">
    <p class= "pageTitle">Add Role</p>
<form class="createForm" action="/add/role" method="post">
    <div class="col s2">
    <label class="createFormText" for="RoleName"><b>Role Name</b></label>
    </div>
    <div class="col s2">
        <input class="createFormInput" placeholder="Role Name" id="RoleName" type="text" name="RoleName" required>
    </div>

    <div class="col s2">
    <label class="createFormText" for="SpecSum"><b>Specification Sumary</b></label>
    </div>
    <div class="col s2">
       <textarea rows = "5" cols = "45" class="createFormInput" placeholder="Specification Summary" id="SpecSum" type="text" name="SpecSum" required>
       </textarea>
    </div>

    <div class="col s2">
    <label class="createFormText" for="SpecLink"><b>Specification Link</b></label>
    </div>
    <div class="col s2">
        <input class="createFormInput" id="SpecLink" placeholder="Link to Sharepoint" type="text" name="SpecLink" required>
    </div>
    
    <div class="col s2">
    <label class="createFormText" for="Capability"><b>Capability</b></label>
    </div>
    <div class="col s2">
    <select class="createFormInput" id="Capability" name="Capability">
      {% for capability in capabilities %}
        <option value="{{capability.Name}}">{{capability.Name}}</option>
      {% endfor %}
    </select>
    </div>
    <div class="col s2">
    <label class="createFormText" for="Band"><b>Band</b></label>
    </div>
    <div class="col s4">
    <select class="createFormInput" id="Band" name="Band">
      {% for band in bands %}
        <option value="{{band.Name}}">{{band.Name}}</option>
      {% endfor %}
    </select>
    </div>
    <button id="AddSubmitButton" class="createFormSubmit" type="submit">Add Role</button>
</form>
</div>

</body>
{% endblock %}
{% block footer %} {% include "../components/footer.njk" %} {% endblock %}
