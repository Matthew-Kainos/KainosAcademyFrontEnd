{% extends './base.njk' %}
{% block pageTitle %}
{% endblock %}
{% block header %}{% include "../components/header.njk" %}{% endblock %}
{% block main %}
{% include "../components/navBar.njk" %}

<title> Show Job Roles in hierarchy </title>
<div class="row">
<div class="col s3">
</div>
<h1>List of Job Roles</h1>
{% if jobs and jobs.length > 0 %}
<table style="margin: auto" border="1" id="jobRolesTable">
<tr>
<th><h3>Job Role Name</h3></th>
<th><h3>Band Level</h3></th>
<th><h3>Band Name</h3></th>
</tr>
{% for job in jobs %}
<tr>
<td><a href=http://localhost:3001/jobs/job-roles-spec/{{job.Role_ID}}><div id="{{job.Role_ID}}joblink">{{job.name}}</div></a></td>
<td>{{job.Level}}</td>
<td>{{job.Name}}</td>

</tr>
{% endfor %}
</table>
</div>
{% else %}
No Job Roles in database.
{% endif %}
{% endblock %}
